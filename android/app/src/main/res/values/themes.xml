<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- PulseRelay Dark Theme - Matching Web UI -->
    <style name="Theme.PulseRelay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Twitch Purple -->
        <item name="colorPrimary">@color/twitch_purple</item>
        <item name="colorPrimaryVariant">@color/twitch_purple_dark</item>
        <item name="colorOnPrimary">@color/text_accent</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/twitch_purple_light</item>
        <item name="colorSecondaryVariant">@color/twitch_purple_hover</item>
        <item name="colorOnSecondary">@color/text_accent</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/bg_primary</item>
        <item name="colorSurface">@color/bg_secondary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar & navigation bar -->
        <item name="android:statusBarColor">@color/bg_primary</item>
        <item name="android:navigationBarColor">@color/bg_secondary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_muted</item>
        
        <!-- Action Bar / App Bar -->
        <item name="colorControlNormal">@color/text_secondary</item>
        <item name="colorControlActivated">@color/twitch_purple</item>
        <item name="colorControlHighlight">@color/twitch_purple_hover</item>
        
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Widget.PulseRelay.Button</item>
        <item name="switchStyle">@style/Widget.PulseRelay.Switch</item>
        
        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/Widget.PulseRelay.Card</item>
        
        <!-- Dialog styling - dark background -->
        <item name="alertDialogTheme">@style/Theme.PulseRelay.Dialog</item>
        <item name="materialAlertDialogTheme">@style/Theme.PulseRelay.Dialog</item>
        
        <!-- Fonts -->
        <item name="android:fontFamily">sans-serif</item>
        
        <!-- Splash screen (for API 31+) -->
        <item name="android:windowSplashScreenBackground">@color/bg_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
    </style>
    
    <!-- Splash Screen Theme (for API < 31) -->
    <style name="Theme.PulseRelay.Splash" parent="Theme.PulseRelay">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Dialog Theme - Dark Background -->
    <style name="Theme.PulseRelay.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/bg_secondary</item>
        <item name="backgroundTint">@color/bg_secondary</item>
        <item name="android:colorBackground">@color/bg_secondary</item>
        <item name="colorSurface">@color/bg_secondary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.PulseRelay.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.PulseRelay.Button.TextButton</item>
    </style>
    
    <!-- Text Button for Dialogs -->
    <style name="Widget.PulseRelay.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/twitch_purple</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.PulseRelay.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/twitch_purple</item>
        <item name="android:textColor">@color/text_accent</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="elevation">4dp</item>
        <item name="rippleColor">@color/twitch_purple_hover</item>
    </style>

    <!-- Switch Style -->
    <style name="Widget.PulseRelay.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb</item>
        <item name="trackTint">@color/switch_track</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.PulseRelay.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/bg_secondary</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeColor">@color/twitch_purple_transparent</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Title Text Style -->
    <style name="TextAppearance.PulseRelay.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_accent</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="TextAppearance.PulseRelay.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Body Text Style -->
    <style name="TextAppearance.PulseRelay.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
