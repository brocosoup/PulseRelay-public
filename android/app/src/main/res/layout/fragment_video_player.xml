<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">
    
    <!-- Main WebView for Twitch Player -->
    <WebView
        android:id="@+id/webViewPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/twitch_purple" />
    
    <!-- Error Message (hidden by default) -->
    <LinearLayout
        android:id="@+id/errorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_error"
            android:textColor="@color/danger_color"
            android:textSize="16sp"
            android:gravity="center" />
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_refresh"
            android:backgroundTint="@color/twitch_purple"
            android:layout_marginTop="16dp" />
    </LinearLayout>
    
    <!-- Floating Action Button to return to main menu -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:contentDescription="Back to main menu"
        android:src="@android:drawable/ic_menu_revert"
        app:backgroundTint="@color/twitch_purple"
        app:tint="@android:color/white" />
    
</FrameLayout>
