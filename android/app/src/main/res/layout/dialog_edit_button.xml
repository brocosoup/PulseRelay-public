<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Command"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="!scene_main"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:maxLength="50" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edittext_background"
            android:inputType="textCapWords"
            android:maxLength="20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subtitle"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edittext_background"
            android:inputType="textCapWords"
            android:maxLength="20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/spinner_background"
                android:popupBackground="@color/bg_secondary" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/spinner_background"
            android:popupBackground="@color/bg_secondary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Icon"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_icon_preview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="Icon preview" />

            <Button
                android:id="@+id/btn_pick_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Change Icon" />

        </LinearLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_requires_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ask confirmation before sending"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_confirmation_message_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmation Message"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_confirmation_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Are you sure?"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:maxLength="100"
            android:visibility="gone" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_requires_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requires custom input"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_input_hint_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Hint"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_input_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter custom message..."
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:maxLength="50"
            android:visibility="gone" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_use_custom_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send to custom channel"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_custom_channel_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Channel Name"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_custom_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="channel_name"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:maxLength="25"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
