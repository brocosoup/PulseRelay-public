<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle text-warning mb-3" style="font-size: 4rem;"></i>
                <h1 class="h2 mb-3">
                    <%= statusCode || 500 %>
                </h1>
                <h4 class="mb-4">
                    <%= title || 'An error occurred' %>
                </h4>
                <p class="text-muted mb-4">
                    <%= message || 'Something went wrong. Please try again later.' %>
                </p>
                
                <div class="d-flex justify-content-center gap-3">
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home me-1"></i>
                        Go Home
                    </a>
                    <button id="go-back-btn" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Go Back
                    </button>
                </div>
            </div>
        </div>
        
        <% if (typeof error !== 'undefined' && error && process.env.NODE_ENV === 'development') { %>
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-bug me-2"></i>
                    Debug Information
                </h5>
            </div>
            <div class="card-body">
                <pre class="bg-light p-3 rounded"><%= error.stack %></pre>
            </div>
        </div>
        <% } %>
    </div>
</div>

<!-- External JavaScript for error page -->
<script src="/js/error.js"></script>
