<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Location Overlay</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { background: transparent; overflow: hidden; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        #map { width: 100vw; height: 100vh; }
        .status {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(0,0,0,0.8);
            color: white;
            padding: 10px;
            border-radius: 5px;
            z-index: 1000;
        }
        .marker {
            width: 20px;
            height: 20px;
            background: #9146ff;
            border: 3px solid white;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(145, 70, 255, 0.7); }
            70% { box-shadow: 0 0 0 20px rgba(145, 70, 255, 0); }
            100% { box-shadow: 0 0 0 0 rgba(145, 70, 255, 0); }
        }
        
        /* Telemetry widgets */
        .telemetry-container {
            position: absolute;
            bottom: 40px;
            left: 0;
            right: 0;
            display: flex;
            gap: 40px;
            z-index: 1000;
            justify-content: center;
            padding: 0 40px;
        }
        
        .telemetry-card {
            background: rgba(0, 0, 0, 0.85);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(145, 70, 255, 0.3);
            border-radius: 20px;
            padding: 40px;
            flex: 1;
            max-width: 400px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
        }
        
        .telemetry-card.disabled {
            opacity: 0.3;
        }
        
        .telemetry-label {
            color: rgba(255, 255, 255, 0.6);
            font-size: 24px;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 15px;
            font-weight: 500;
        }
        
        .telemetry-value {
            color: #ffffff;
            font-size: 96px;
            font-weight: 700;
            line-height: 1;
            margin-bottom: 10px;
        }
        
        .telemetry-unit {
            color: rgba(145, 70, 255, 0.9);
            font-size: 48px;
            font-weight: 600;
            margin-left: 10px;
        }
        
        .telemetry-subtext {
            color: rgba(255, 255, 255, 0.5);
            font-size: 20px;
            margin-top: 10px;
        }
        
        .speed-indicator {
            display: flex;
            align-items: baseline;
        }
        
        /* Specific card gradients */
        .speedometer {
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.9) 0%, rgba(145, 70, 255, 0.1) 100%);
        }
        
        .altitude {
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.9) 0%, rgba(70, 145, 255, 0.1) 100%);
        }
        
        .distance {
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.9) 0%, rgba(70, 255, 145, 0.1) 100%);
        }
    </style>
</head>
<body>
    <div id="map"></div>
    <div id="status" class="status">Loading...</div>
    
    <!-- Telemetry widgets -->
    <div class="telemetry-container">
        <!-- Speedometer -->
        <div class="telemetry-card speedometer" id="speedCard">
            <div class="telemetry-label">Speed</div>
            <div class="speed-indicator">
                <span class="telemetry-value" id="speedValue">--</span>
                <span class="telemetry-unit">km/h</span>
            </div>
            <div class="telemetry-subtext" id="speedMph">-- mph</div>
        </div>
        
        <!-- Altitude -->
        <div class="telemetry-card altitude" id="altitudeCard">
            <div class="telemetry-label">Altitude</div>
            <div class="speed-indicator">
                <span class="telemetry-value" id="altitudeValue">--</span>
                <span class="telemetry-unit">m</span>
            </div>
            <div class="telemetry-subtext" id="altitudeFeet">-- ft</div>
        </div>
        
        <!-- Distance -->
        <div class="telemetry-card distance" id="distanceCard">
            <div class="telemetry-label">Distance</div>
            <div class="speed-indicator">
                <span class="telemetry-value" id="distanceValue">0,00</span>
                <span class="telemetry-unit">km</span>
            </div>
            <div class="telemetry-subtext" id="distanceMiles">0.00 mi</div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="/js/map-overlay.js"></script>
</body>
</html>